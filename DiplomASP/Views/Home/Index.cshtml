@model DiplomASP.Models.ViewModels.IndexModel

@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/Index.css" />
<div class="col-xl-2 ml-4">
    <!--sidebar-->
    <div class="bg-dark mx-3 categories-sidebar py-2">
        <ul class="">
            @foreach (var category in Model.categories)
            {
                <li class="my-2 pe-2 ps-0">
                    <a class="dark-link" href="#"> @category.CategoryName </a>
                </li>
            }

        </ul>
    </div>
</div>
<div class="col-xl-10">
    <main role="main" class="">
        <div class="row d-flex justify-content-center">
            <!--content-->
            <h3>Популярные товары</h3>
            @for (int x = 0; x < 3; x++) //доп. цикл чтобы вывести больше карточек товаров
            {
                @foreach (var popularProduct in Model.popularProducts)
                {
                    <div class="card p-2 m-3 col-3 col-lg-3" style="height: 100px; width: 400px">
                        <div class="row g-0" style="height: 100%">
                            <div class="col-4" style="height: 100%">
                                <img src="data:image/png;base64, @Convert.ToBase64String(popularProduct.Image)" alt="..." class="img-fluid card-img-popular" style="height: 100%" />
                            </div>
                            <div class="col-8">
                                <div class="card-body">
                                    <p class="card-text">
                                        @popularProduct.Name
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

            <h3>Новые товары</h3>
            @foreach (var newProduct in Model.newProducts)
            {
                <div class="card col-lg-3 col-md-3 p-2 m-3" style="height: 100px; width: 400px">
                    <div class="row g-0" style="height: 100%">
                        <div class="col-4" style="height: 100%">
                            <img src="data:image/png;base64, @Convert.ToBase64String(newProduct.Image)" alt="..." class="img-fluid card-img-popular" style="height: 100%" />
                        </div>
                        <div class="col-8">
                            <div class="card-body">
                                <p class="card-popular-text">
                                    @newProduct.Name
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </main>
</div>
