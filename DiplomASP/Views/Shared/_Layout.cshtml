<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Diplom</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-3">
            <div class="container-fluid align-content-between">
                <a class="navbar-brand mx-3" href="@Url.Action("Index", "Home")">
                    <img src="~/logo.png" alt="NAV_BRAND" width="100" height="40">
                </a>
                <form class="d-flex w-50 px-5" asp-controller="Search" asp-action="Index" method="post">
                    <input class="form-control me-2" type="search" placeholder="Поиск" aria-label="Search" name="searchString">
                    <button class="btn btn-outline-light" type="submit">Поиск</button>
                </form>
                <a class="btn btn-outline-light mx-5" href="@Url.Action("Index", "Admin")">Администрирование</a>
                <a class="btn btn-outline-light mx-5" href="@Url.Action("Index", "Cart")">Корзина</a>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted">
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
